<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".wallpapers.DetailActivity">

    <ImageView
            android:id="@+id/detail_picture_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
    />

    <ImageView
            android:id="@+id/background_imageview"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000"/>

    <TextView
            android:id="@+id/creator_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creator Name"
            android:layout_above="@id/picture_website_textview"
            android:layout_marginLeft="@dimen/giant_margin"
            android:textColor="@color/mainTextColor"
            android:textSize="18dp"
    />

    <TextView
            android:id="@+id/picture_website_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pexels.com"
            android:layout_marginLeft="@dimen/giant_margin"
            android:layout_marginBottom="@dimen/giant_margin"
            android:layout_alignParentBottom="true"
            android:textColor="@color/mainTextColor"
            android:textSize="18dp"
    />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/set_background_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_marginBottom="@dimen/giant_margin"
            app:backgroundTint="@color/mainFabColor"
            android:src="@drawable/ic_wallpaper"
            android:tint="@android:color/white"
    />

    <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


</RelativeLayout>